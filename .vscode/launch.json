{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch index.html",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}/index.html"
        },
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach",
            "type": "firefox",
            "request": "attach"
        },
        {
            "name": "Launch WebExtension",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "addonPath": "${workspaceFolder}"
        },
        // --- ADD THE NEW CONFIGURATION BELOW THIS LINE ---
        {
            "name": "Launch Python App (Firefox)", // This is your new configuration
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Run Python App" // This links to your tasks.json
        },
        {
            "name": "Attach Firefox (Python App)", // Give it a clear name
            "type": "firefox",
            "request": "attach",
            "url": "http://localhost:5000", // The URL of the tab you want to debug
            "webRoot": "${workspaceFolder}", // Root of your project's source code
            "port": 6000 // Default port for Firefox remote debugging. Leave this unless you've configured Firefox to use a different port.
        }
    ]
}
